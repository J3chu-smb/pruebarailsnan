<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<% @tasks.each_slice(3) do |tasks| %>
<div class="card-deck">
<% tasks.each do |task| %>
<div class="card">
  <img src="<%= task.photo %>" class="card-img-top" alt="task image">
  <div class="card body padding">
    <h5 class="card-title"><%= task.name %></h5>

    <% if user_signed_in? %>
    <td><%= link_to 'Show', task, class: 'btn btn-outline-primary btn-sm mb-2 ml-5 mr-5 mt-2' %></td>
    <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-outline-warning btn-sm ml-5 mr-5' %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm mt-2 ml-5 mr-5' %></td>
    <td><%= link_to 'Complete', task, class: 'btn btn-outline-success btn-sm mt-2 ml-5 mr-5 mb-3' %></td>
    <% else %>
    <td><%= link_to 'Show', task, class: 'btn btn-outline-primary btn-sm mb-2 ml-5 mr-5 mt-2' %></td>
    <% end %>
  </div>
  <div class="card-footer">
    <small class="text-muted"><%= time_ago_in_words task.created_at %></small>
  </div>
</div>
<% end %>
</div>
<br>
<% end %>

<%= link_to 'New Task', new_task_path %>
